<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/tools">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/upCurrency"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Spinner
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/spnCountry1"
            android:layout_weight="1" />


        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:maxLines="1"
            autofit:minTextSize="16sp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:id="@+id/tvBox1"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/downCurrency"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upCurrency"
        android:layout_toRightOf="@+id/adView"
        android:layout_toEndOf="@+id/adView"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Spinner
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/spnCountry2"
            android:layout_weight="1" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:maxLines="1"
            autofit:minTextSize="16sp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:id="@+id/tvBox2"
            android:layout_weight="2" />

    </LinearLayout>

    <include layout="@layout/keyboard"
        android:visibility="visible"/>

</RelativeLayout>

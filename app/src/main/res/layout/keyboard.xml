<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bannersizes_rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:stretchColumns="*"
        android:layout_above="@+id/adView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="@string/keypad7"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv7"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground" />
            <TextView
                android:text="@string/keypad8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv8"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv9"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypadAdd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tvAdd"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/keypad4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv4"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv5"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv6"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:src="@drawable/ic_share_black_24dp"
                android:alpha=".54"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tvShare"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/keypad1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv3"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tvRate"
                android:alpha=".54"
                android:src="@drawable/ic_star_black_24dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/keypadDot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tvDot"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypad0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv0"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:text="@string/keypadDel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/tvDel"
                android:alpha=".54"
                android:src="@drawable/ic_backspace_black_24dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>
            <TextView
                android:text="@string/keypadClr"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tvClr"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/keyboard_text_size"
                android:background="?android:attr/selectableItemBackground"/>

        </TableRow>

    </TableLayout>

    <com.google.android.gms.ads.AdView
        android:layout_marginTop="10dp"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>